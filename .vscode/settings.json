{
    // Python environment - auto-activate .venv
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.terminal.activateEnvironment": true,

    // Snyk - disable Open Source scanner, keep Code scanner
    "snyk.features.openSourceSecurity": false,
    "snyk.features.codeSecurity": true,
    "snyk.features.infrastructureAsCode": true,

    // Python formatting with Ruff
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },

    // Trailing whitespace handling (all file types)
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // Ruff configuration
    "ruff.enable": true,

    // Python testing
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,

    // Treat LICENSE file as plaintext
    "files.associations": {
      "LICENSE": "plaintext"
    }
}
